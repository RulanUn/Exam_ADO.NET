<Window x:Class="Exam_VarII.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_VarII"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="200">
    <StackPanel>
        <TextBlock Text="Введите логин" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="login" Margin="10"/>
        <TextBlock Text="Введите пароль" Margin="10" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="Password" Margin="10"/>
        <Button x:Name="Button_login" Content="Войти" Height="20"  Margin="10" Width="60" Click="Button_login_Click"/>
    </StackPanel>
</Window>
